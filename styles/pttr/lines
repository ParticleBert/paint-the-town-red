# Autobahnen
highway=motorway {set mkgmap:autobahn='yes'}
highway=motorway_link {set mkgmap:autobahn='yes'}

# Schnellstrassen
highway=trunk {set mkgmap:schnellstrasse='yes'}
highway=trunk_link {set mkgmap:schnellstrasse='yes'}

# Bundesstrassen
highway=primary {set mkgmap:bundesstrasse='yes'}
highway=primary_link {set mkgmap:bundesstrasse='yes'}

# Landesstrassen
highway=secondary {set mkgmap:landesstrasse='yes'}
highway=secondary_link {set mkgmap:landesstrasse='yes'}

# Kreisstrassen
highway=tertiary  {set mkgmap:kreisstrasse='yes'}
highway=tertiary_link {set mkgmap:kreisstrasse='yes'}

# Reststrassen
highway=unclassified {set mkgmap:reststrasse='yes'}
highway=residential {set mkgmap:reststrasse='yes'}

# Paint
mkgmap:autobahn=yes [0x01 road_class=4 resolution 22-24 continue]
mkgmap:autobahn=yes [0x07 road_class=4 resolution 20-18]
mkgmap:schnellstrasse=yes [0x02 road_class=3 resolution 18-24]
mkgmap:bundesstrasse=yes [0x02 road_class=3 resolution 18-24]
mkgmap:landesstrasse=yes [0x03 road_class=2 resolution 22-24]
mkgmap:kreisstrasse=yes [0x03 road_class=1 resolution 22-24]
mkgmap:reststrasse=yes [0x04 road_class=0 resolution 24]


